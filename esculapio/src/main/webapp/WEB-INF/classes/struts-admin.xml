<struts>

  <package name="admin" extends="default" namespace="/admin">

    <action name="datasource!*" method="{1}" class="hospital.actions.DatasourceAction">
      <result>/jsp/admin-datasource.jsp</result>
      <result name="input">/jsp/admin-datasource.jsp</result>
    </action>

    <action name="snoop">
      <result>/jsp/admin-snoop.jsp</result>
    </action>

    <action name="planilha" method="carregarPlanilha" class="hospital.actions.AdministracaoAction">
      <result>/jsp/admin-planilha.jsp</result>
      <result name="input">/jsp/admin-planilha.jsp</result>
    </action>

  </package>

</struts>
